<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    tools:ignore="ContentDescription">

    <FrameLayout
        android:id="@+id/fl_tab_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/home_tab_selector"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_tab_invest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_tab_invest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/invest_tab_selector"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_tab_my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_tab_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/my_tab_selector"/>

    </FrameLayout>


</LinearLayout>