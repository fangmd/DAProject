        <item name="toolbarStyle">@style/ClubToolbar</item>

        <item name="android:windowBackground" >@color/white</item>
    </style>

    <!--透明背景的 Activity -->
    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
